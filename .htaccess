# DO NOT REMOVE. CLOUDLINUX PASSENGER CONFIGURATION BEGIN
PassengerAppRoot "/home/dcmsfdca/datanalisis.dcmsystem.co"
PassengerBaseURI "/"
PassengerNodejs "/home/dcmsfdca/nodevenv/datanalisis.dcmsystem.co/20/bin/node"
PassengerAppType node
PassengerStartupFile server.js
# DO NOT REMOVE. CLOUDLINUX PASSENGER CONFIGURATION END
# Habilitar motor de reescritura
RewriteEngine On

# ========================================
# MANEJO DE ARCHIVOS ESTÁTICOS (Next.js)
# ========================================
# Permitir acceso a archivos generados por Next.js
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# Tipos MIME correctos
AddType application/javascript .js
AddType text/css .css
AddType font/woff2 .woff2
AddType font/woff .woff

# Evitar errores MIME al devolver HTML en lugar de JS/CSS
<IfModule mod_mime.c>
    AddType text/javascript .js
</IfModule>

# ========================================
# CONFIGURACIÓN DE CACHE (Opcional)
# ========================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ========================================
# SEGURIDAD BÁSICA
# ========================================
# Ocultar archivos ocultos (.env, etc.)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Evitar acceso a node_modules
RewriteRule ^node_modules/ - [F,L]

# ========================================
# REDIRECCIÓN DE TODAS LAS RUTAS AL INDEX
# SOLO SI USASTE `next export` (Static HTML)
# ========================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [QSA,L]
